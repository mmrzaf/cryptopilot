# CryptoPilot Environment Variables
# Copy this file to .env and customize
# These variables override settings in config.toml

# ============================================================================
# API Configuration
# ============================================================================
CRYPTOPILOT_API__DEFAULT_PROVIDER=coingecko
CRYPTOPILOT_API__API_KEY=your-api-key-here
CRYPTOPILOT_API__REQUEST_TIMEOUT=30
CRYPTOPILOT_API__MAX_RETRIES=3

# ============================================================================
# Data Collection
# ============================================================================
CRYPTOPILOT_DATA__DEFAULT_TIMEFRAME=1d
CRYPTOPILOT_DATA__RETENTION_DAYS=730
CRYPTOPILOT_DATA__GAP_FILL_CHECK=true

# ============================================================================
# Analysis
# ============================================================================
CRYPTOPILOT_ANALYSIS__CONFIDENCE_THRESHOLD=0.6
CRYPTOPILOT_ANALYSIS__RISK_TOLERANCE=moderate

# ============================================================================
# Reporting & LLM
# ============================================================================
CRYPTOPILOT_REPORTING__LLM_PROVIDER=ollama
CRYPTOPILOT_REPORTING__LLM_MODEL=gemma2:2b
CRYPTOPILOT_REPORTING__LLM_API_BASE=http://localhost:11434
CRYPTOPILOT_REPORTING__LLM_API_KEY=your-llm-api-key

# For OpenAI
# CRYPTOPILOT_REPORTING__LLM_PROVIDER=openai
# CRYPTOPILOT_REPORTING__LLM_MODEL=gpt-4
# CRYPTOPILOT_REPORTING__LLM_API_KEY=sk-...

# ============================================================================
# Global Settings
# ============================================================================
CRYPTOPILOT_DEBUG=false
CRYPTOPILOT_LOG_LEVEL=INFO

# ============================================================================
# Database (optional override)
# ============================================================================
# CRYPTOPILOT_DATABASE__PATH=/custom/path/to/cryptopilot.db
